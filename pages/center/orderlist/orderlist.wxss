.cartList {
  position: absolute;
  left: 0;
  top: 0;
  width: 100%;
  padding-bottom: 45px;
  background: white;
  /* height: 100%; */
}

.goods {
  background: #fff;
  border-bottom: 1rpx solid #ddd;
  /* margin-bottom: 10px; *//* padding: 10px 10px 0 10px; */
  height: 92px;
  display: flex;
}

.goods .content {
  display: flex;
  flex-direction: column;
  color: #555;
  font-size: 14px;
  position: absolute;
  height: 92px;
  width: 100%;
  background: white;
}

.goods-name {
  display: flex;
  position: absolute;
  top: 10px;
  left: 10px;
}

.goods-price {
  display: flex;
  position: absolute;
  top: 38px;
  left: 10px;
}

.xiaoji-text {
  display: flex;
  position: absolute;
  right: 20px;
  bottom: 10px;
  color: black;
  font-size: 14px;
}

.xiaoji-text text {
  color: rgb(254, 98, 84);
}

.goods-btn-box {
  display: flex;
  flex-direction: row;
  justify-content: center;
  position: absolute;
  right: 20px;
  top: 30px;
}

.goods-btn-box image {
  width: 23px;
  height: 23px;
  border: 0;
  margin: 0;
}

/* cell 动画  */

.content {
  -webkit-transition: all 0.4s;
  transition: all 0.4s;
  -webkit-transform: translateX(0px);
  transform: translateX(0px);
}

.del-cell-btn {
  position: absolute;
  background-color: orangered;
  height: 92px;
  right: 0;
  width: 90px;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  color: #fff;
  -webkit-transform: translateX(0px);
  transform: translateX(0px);
  -webkit-transition: all 0.4s;
  transition: all 0.4s;
  /* opacity: 0; */
}

.touch-move-active .content {
  -webkit-transform: translateX(-90px);
  transform: translateX(-90px);
}

.touch-move-active .del-cell-btn {
  opacity: 1;
}

